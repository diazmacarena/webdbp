<!-- 
  Archivo: login.ejs
  Descripción: Página de inicio de sesión
  Propósito: Permitir a los usuarios autenticarse en la aplicación
-->

<!DOCTYPE html>
<html lang="es-PE">

<head>
	<%- include('partials/head') %>
  <!-- Incluye la hoja de estilos específica para formularios -->
  <link rel="stylesheet" href="/styles/forms.css">
</head>

<body>
  <!-- Incluye el encabezado común con la navegación -->
  <%- include('partials/header') %>
  
  <div class="main">
    <!-- Título de la página -->
    <h1>Iniciar Sesión</h1>
    
    <!-- Formulario de inicio de sesión con método POST -->
	<form method="post" action="/login">
	  <!-- Campo para el correo electrónico -->
	  <div class="form-group">
	    <label for="email">Correo Electrónico:</label>
	    <input type="email" id="email" name="email" required>
	  </div>
	  
	  <!-- Campo para la contraseña -->
	  <div class="form-group">
	    <label for="password">Contraseña:</label>
	    <input type="password" id="password" name="password" required>
	  </div>
	  
	  <!-- Botón de envío del formulario -->
	  <button class="btn btn-primary">Iniciar Sesión</button>
	</form>
    
    <!-- Muestra mensajes de error si existen -->
    <% if (error) { %><p style="color:red">Error: <%= error %></p><% } %>
    
    <!-- Enlace para crear una nueva cuenta -->
    <a href="/signup">No tengo una cuenta</a>
  </div>
</body>
</html>
