        const res = await fetch('/completar-tarea', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ tareaId: id })
        });
        if (res.ok) {
          location.reload();
        }
      } catch (err) {
        console.error('Error al completar tarea:', err);
      }
    }

async function completarTarea(id) {
  try {
    const res = await fetch('/completar-tarea', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ tareaId: id })
    });

    if (res.ok) {
      // Marcar tarea como completada en el DOM
      const li = document.querySelector(`li[data-id="${id}"]`);
      li.classList.add('completed');
      const btn = li.querySelector('.complete-btn');
      if (btn) btn.remove(); // eliminar bot√≥n "completar"
    }
  } catch (err) {
    console.error('Error al completar tarea:', err);
  }
}

async function eliminarTarea(id) {
  try {
    const res = await fetch(`/eliminar-tarea/${id}`, {
      method: 'DELETE'
    });

    if (res.ok) {
      // Eliminar el elemento de la lista del DOM
      const li = document.querySelector(`li[data-id="${id}"]`);
      if (li) li.remove();
    }
  } catch (err) {
    console.error('Error al eliminar tarea:', err);
  }
}


// === Registrar nueva tarea desde formulario ===
document.getElementById('formNuevaTarea').addEventListener('submit', async function (e) {
  e.preventDefault();
  const descripcion = document.getElementById('inputTarea').value.trim();
  if (!descripcion) return;

  try {
    const res = await fetch('/agregar-tarea', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ descripcion })
    });
    if (res.ok) {
        const nuevaTarea = await res.json(); // aseg√∫rate que el backend te devuelva la tarea
      
        const li = document.createElement('li');
        li.setAttribute('data-id', nuevaTarea.id);
        li.innerHTML = `
          <span>${nuevaTarea.descripcion}</span>
          <div class="task-actions">
            <button class="complete-btn" onclick="completarTarea('${nuevaTarea.id}')">‚úÖ Completar</button>
            <button onclick="eliminarTarea('${nuevaTarea.id}')">üóë Eliminar</button>
          </div>
        `;
      
        document.getElementById('taskList').appendChild(li);
        document.getElementById('inputTarea').value = '';
      }
  } catch (err) {
    console.error('Error al agregar tarea:', err);
  }
});

  </script>
</body>
</html>
