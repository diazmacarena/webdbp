<!-- 
  Archivo: quiz.ejs
  Descripción: Página del cuestionario para evaluar el nivel de estrés académico
  Propósito: Permitir a los usuarios evaluar su nivel de estrés mediante preguntas específicas
-->

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz de Estrés Académico</title>
  <style>
    /* Estilos específicos para la página de quiz */
    body {
      font-family: 'Poppins', Arial, sans-serif;
      background-image: url('fondo.jpg'); /* Imagen de fondo para la página */
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center;
      margin: 0;
      padding: 20px;
      color: #333;
    }

    /* Contenedor principal del cuestionario */
    .quiz-container {
      max-width: 850px;
      margin: 40px auto;
      background: rgba(255, 255, 255, 0.95); /* Fondo semi-transparente */
      padding: 40px 30px;
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    /* Estilo para el título principal */
    h1 {
      text-align: center;
      color: #c0392b;
      margin-bottom: 20px;
      font-size: 2.5rem;
    }

    /* Estilo para las instrucciones */
    p.instructions {
      text-align: center;
      font-size: 1.1rem;
      margin-bottom: 40px;
      color: #7f8c8d;
    }

    /* Estilo para cada pregunta */
    .question {
      margin-bottom: 35px;
    }

    /* Estilo para el título de cada pregunta */
    .question-title {
      font-weight: 600;
      font-size: 1.2rem;
      margin-bottom: 15px;
      color: #e74c3c;
    }

    /* Contenedor para las opciones de respuesta */
    .options {
      display: flex;
      justify-content: center;
      gap: 15px;
      flex-wrap: wrap;
    }

    /* Estilo para las etiquetas de opciones */
    label {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 10px;
      background-color: #f7f7f7;
      border-radius: 10px;
      cursor: pointer;
      transition: background 0.3s, transform 0.2s;
      width: 60px;
      font-weight: bold;
      color: #555;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    /* Efecto hover para las etiquetas */
    label:hover {
      background-color: #ffe6e6;
      transform: translateY(-3px);
    }

    /* Estilo para los inputs de tipo radio */
    input[type="radio"] {
      margin-bottom: 8px;
      accent-color: #e74c3c;
      transform: scale(1.2);
    }

    /* Estilo para el botón de enviar */
    .submit-button {
      display: block;
      margin: 40px auto 0;
      padding: 15px 40px;
      font-size: 1.2rem;
      font-weight: bold;
      background-color: #e74c3c;
      color: white;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      transition: background 0.3s;
      box-shadow: 0 5px 15px rgba(231, 76, 60, 0.4);
    }

    /* Efecto hover para el botón de enviar */
    .submit-button:hover {
      background-color: #c0392b;
    }

    /* Estilos responsivos para móviles */
    @media (max-width: 600px) {
      .options {
        flex-direction: row;
        gap: 10px;
      }
    }
  </style>
  <!-- Incluye la fuente Poppins de Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>

<div class="quiz-container">
  <h1>Quiz para Detectar Signos de Estrés Académico</h1>
  <p class="instructions">
    Responde las siguientes preguntas según la frecuencia:<br>
    0: Nunca | 1: Rara vez | 2: A veces | 3: Frecuentemente | 4: Casi siempre
  </p>

  <form>
    <!-- Preguntas del cuestionario -->
    <!-- Cada pregunta tiene una estructura similar con opciones de 0 a 4 -->
    <div class="question">
      <div class="question-title">Alteraciones del sueño: ¿Tienes dificultades para dormir debido a preocupaciones académicas?</div>
      <div class="options">
        <label><input type="radio" name="q1" value="0">0</label>
        <label><input type="radio" name="q1" value="1">1</label>
        <label><input type="radio" name="q1" value="2">2</label>
        <label><input type="radio" name="q1" value="3">3</label>
        <label><input type="radio" name="q1" value="4">4</label>
      </div>
    </div>

    <div class="question">
      <div class="question-title">Ansiedad ante evaluaciones: ¿Sientes nerviosismo extremo antes o durante exámenes o presentaciones?</div>
      <div class="options">
        <label><input type="radio" name="q2" value="0">0</label>
        <label><input type="radio" name="q2" value="1">1</label>
        <label><input type="radio" name="q2" value="2">2</label>
        <label><input type="radio" name="q2" value="3">3</label>
        <label><input type="radio" name="q2" value="4">4</label>
      </div>
    </div>

    <div class="question">
        <div class="question-title">Fatiga crónica: ¿Te sientes constantemente cansado/a incluso después de descansar?</div>
        <div class="options">
            <label><input type="radio" name="q3" value="0">0</label>
            <label><input type="radio" name="q3" value="1">1</label>
            <label><input type="radio" name="q3" value="2">2</label>
            <label><input type="radio" name="q3" value="3">3</label>
            <label><input type="radio" name="q3" value="4">4</label>
        </div>
    </div>

    <div class="question">
        <div class="question-title">Dificultad para concentrarse: ¿Te cuesta mantener la atención en tus estudios?</div>
        <div class="options">
            <label><input type="radio" name="q4" value="0">0</label>
            <label><input type="radio" name="q4" value="1">1</label>
            <label><input type="radio" name="q4" value="2">2</label>
            <label><input type="radio" name="q4" value="3">3</label>
            <label><input type="radio" name="q4" value="4">4</label>
        </div>
    </div>

    <div class="question">
        <div class="question-title">Cambios en la alimentación: ¿Has notado que comes mucho más o mucho menos de lo habitual?</div>
        <div class="options">
            <label><input type="radio" name="q5" value="0">0</label>
            <label><input type="radio" name="q5" value="1">1</label>
            <label><input type="radio" name="q5" value="2">2</label>
            <label><input type="radio" name="q5" value="3">3</label>
            <label><input type="radio" name="q5" value="4">4</label>
        </div>
    </div>

    <div class="question">
        <div class="question-title">Procrastinación: ¿Pospones frecuentemente tus responsabilidades académicas?</div>
        <div class="options">
            <label><input type="radio" name="q6" value="0">0</label>
            <label><input type="radio" name="q6" value="1">1</label>
            <label><input type="radio" name="q6" value="2">2</label>
            <label><input type="radio" name="q6" value="3">3</label>
            <label><input type="radio" name="q6" value="4">4</label>
        </div>
    </div>

    <div class="question">
        <div class="question-title">Irritabilidad: ¿Te sientes irritable o te enojas con facilidad?</div>
        <div class="options">
            <label><input type="radio" name="q7" value="0">0</label>
            <label><input type="radio" name="q7" value="1">1</label>
            <label><input type="radio" name="q7" value="2">2</label>
            <label><input type="radio" name="q7" value="3">3</label>
            <label><input type="radio" name="q7" value="4">4</label>
        </div>
    </div>

    <div class="question">
        <div class="question-title">Pensamiento catastrófico: ¿Piensas en consecuencias extremadamente negativas si no alcanzas tus metas académicas?</div>
        <div class="options">
            <label><input type="radio" name="q8" value="0">0</label>
            <label><input type="radio" name="q8" value="1">1</label>
            <label><input type="radio" name="q8" value="2">2</label>
            <label><input type="radio" name="q8" value="3">3</label>
            <label><input type="radio" name="q8" value="4">4</label>
        </div>
    </div>

    <div class="question">
        <div class="question-title">Síntomas físicos: ¿Experimentas dolores de cabeza, tensión muscular o problemas digestivos durante periodos académicos intensos?</div>
        <div class="options">
            <label><input type="radio" name="q9" value="0">0</label>
            <label><input type="radio" name="q9" value="1">1</label>
            <label><input type="radio" name="q9" value="2">2</label>
            <label><input type="radio" name="q9" value="3">3</label>
            <label><input type="radio" name="q9" value="4">4</label>
        </div>
    </div>

    <div class="question">
        <div class="question-title">Aislamiento social: ¿Has reducido tu interacción social por dedicarte a tus estudios?</div>
        <div class="options">
            <label><input type="radio" name="q10" value="0">0</label>
            <label><input type="radio" name="q10" value="1">1</label>
            <label><input type="radio" name="q10" value="2">2</label>
            <label><input type="radio" name="q10" value="3">3</label>
            <label><input type="radio" name="q10" value="4">4</label>
        </div>
    </div>

    <!-- Botón para enviar el cuestionario -->
    <button type="button" class="submit-button" id="quiz-submit">Enviar</button>
  </form>
</div>
</body>
</html>

<!-- Script JavaScript para manejar la lógica del cuestionario -->
<script>
  document.getElementById("quiz-submit").addEventListener("click", function () {
    let total = 0;
    const respuestas = {};
    const sintomas = {
      q1: "alteraciones_sueno",
      q2: "ansiedad_evaluaciones",
      q3: "fatiga_cronica",
      q4: "dificultad_concentrarse",
      q5: "cambios_alimentacion",
      q6: "procrastinacion",
      q7: "irritabilidad",
      q8: "pensamiento_catastrofico",
      q9: "sintomas_fisicos",
      q10: "aislamiento_social"
    };

    // Verifica que todas las preguntas estén respondidas
    for (let i = 1; i <= 10; i++) {
      const seleccion = document.querySelector(`input[name="q${i}"]:checked`);
      if (seleccion) {
        const valor = parseInt(seleccion.value);
        total += valor;
        respuestas[sintomas[`q${i}`]] = valor;
      } else {
        alert(`Debes responder la pregunta ${i}`);
        return;
      }
    }

    // Enviar puntaje total
    fetch('/guardar-puntaje', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json'
      },
      body: JSON.stringify({ puntaje: total })
    })
    .then(response => response.json())
    .then(data => {
      // Después de guardar el puntaje, enviar síntomas presentes
      return fetch('/guardar-sintomas', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ respuestas })
      });
    })
    .then(() => {
      // Redirigir según el nivel de estrés
      if (total <= 10) {
        window.location.href = "/nivel_bajo";
      } else if (total <= 20) {
        window.location.href = "/nivel_moderado";
      } else if (total <= 30) {
        window.location.href = "/nivel_alto";
      } else {
        window.location.href = "/nivel_muy_alto";
      }
    })
    .catch(error => {
      console.error('Error al guardar los datos:', error);
      alert('Hubo un error al guardar tus respuestas. Intenta nuevamente.');
    });
  });
</script>

